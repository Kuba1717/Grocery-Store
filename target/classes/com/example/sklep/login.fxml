<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sklep.controller.LoginController">
   <center>
      <AnchorPane prefHeight="600.0" prefWidth="800.0">
         <children>
            <Label layoutX="326.0" layoutY="50.0" prefWidth="149.0" text="Login Screen">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label layoutX="151.0" layoutY="140.0" prefHeight="30.0" prefWidth="71.0" text="Login:" textFill="#333333">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="tf_login" layoutX="244.0" layoutY="140.0" prefHeight="25.0" prefWidth="360.0" promptText="Login">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label layoutX="151.0" layoutY="194.0" text="Password:" textFill="#333333">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <PasswordField fx:id="tf_password" layoutX="244.0" layoutY="191.0" prefHeight="25.0" prefWidth="360.0" promptText="Password">
               <font>
                  <Font size="14.0" />
               </font>
            </PasswordField>
            <Button fx:id="button_login" layoutX="149.0" layoutY="285.0" mnemonicParsing="false" onMouseClicked="#handleLogin" prefHeight="30.0" prefWidth="455.0" text="Log In">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="button_sign_up" layoutX="149.0" layoutY="344.0" mnemonicParsing="false" onMouseClicked="#handleRegister" prefHeight="30.0" prefWidth="455.0" text="Sign Up">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Label fx:id="statusLabel" layoutX="230.0" layoutY="85.0" textFill="#ff0000" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
