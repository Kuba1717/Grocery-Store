<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sklep.controller.SignUpController">
   <top>
      <AnchorPane prefHeight="600.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="320.0" layoutY="35.0" text="Sign Up Screen">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label layoutX="54.0" layoutY="143.0" text="Name:" textFill="#333333">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="tf_name" layoutX="221.0" layoutY="140.0" prefHeight="25.0" prefWidth="443.0" promptText="Name">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label layoutX="54.0" layoutY="199.0" text="Surname:" textFill="#333333">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="tf_surname" layoutX="220.0" layoutY="196.0" prefHeight="25.0" prefWidth="443.0" promptText="Surname">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label layoutX="56.0" layoutY="258.0" text="Login:" textFill="#333333">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="tf_login" layoutX="220.0" layoutY="255.0" prefHeight="17.0" prefWidth="443.0" promptText="Login">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label layoutX="51.0" layoutY="314.0" text="Password:" textFill="#333333">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <PasswordField fx:id="tf_password_first" layoutX="220.0" layoutY="311.0" prefHeight="25.0" prefWidth="443.0" promptText="Password">
               <font>
                  <Font size="14.0" />
               </font>
            </PasswordField>
            <Label layoutX="53.0" layoutY="373.0" text="Repeat Password:" textFill="#333333">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <PasswordField fx:id="tf_password_second" layoutX="220.0" layoutY="369.0" prefHeight="30.0" prefWidth="443.0" promptText="Repeat Password">
               <font>
                  <Font size="14.0" />
               </font>
            </PasswordField>
            <Button fx:id="button_sign_up" layoutX="164.0" layoutY="463.0" mnemonicParsing="false" onMouseClicked="#handleSignUp" prefHeight="30.0" prefWidth="495.0" text="Sign Up">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="button_go_back" layoutX="40.0" layoutY="463.0" mnemonicParsing="false" onMouseClicked="#handleGoBack" prefHeight="25.0" prefWidth="88.0" text="Go Back">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Label fx:id="statusLabel" layoutX="240.0" layoutY="75.0" textFill="#ff0000" />
         </children>
      </AnchorPane>
   </top>
</BorderPane>
